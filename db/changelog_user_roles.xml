<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="adranchuk" id="35">
        <createTable tableName="user_roles">
            <column autoIncrement="true" name="user_role_id" type="INT(10)">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="ROLE" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="adranchuk" id="36">
        <addForeignKeyConstraint baseColumnNames="username" baseTableName="user_roles" constraintName="fk_username" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="username" referencedTableName="users"/>
    </changeSet>
    <changeSet author="adranchuk" id="37">
        <createIndex indexName="uni_username_role" tableName="user_roles" unique="true">
            <column name="ROLE"/>
            <column name="username"/>
        </createIndex>
    </changeSet>

    <changeSet id="38" author="adranchuk" >
        <sql>
            insert into user_roles(username, role) values('admin', 'ROLE_ADMIN')
        </sql>
    </changeSet>
</databaseChangeLog>
