<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="adranchuk" id="50">
        <createTable tableName="order_order_items">
            <column name="order_id" type="INT"/>
            <column name="item_id" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet author="adranchuk" id="51">
        <addForeignKeyConstraint baseColumnNames="item_id" baseTableName="order_order_items" constraintName="fk_order_items_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="order_item"/>
    </changeSet>

    <changeSet author="adranchuk" id="52">
        <addForeignKeyConstraint baseColumnNames="order_id" baseTableName="order_order_items" constraintName="fk_order_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="order"/>
    </changeSet>

    <changeSet author="adranchuk" id="53" failOnError="false">
        <dropTable tableName="order_product" />
    </changeSet>

</databaseChangeLog>
