<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>beads</artifactId>
        <groupId>beads</groupId>
        <version>1.0</version>
    </parent>

    <artifactId>beads_db</artifactId>

    <packaging>jar</packaging>

    <version>1.0</version>

    <properties>
        <liquibase.version>3.3.2</liquibase.version>
        <OPENSHIFT_MYSQL_DB_PORT>${env.OPENSHIFT_MYSQL_DB_PORT}</OPENSHIFT_MYSQL_DB_PORT>
        <OPENSHIFT_MYSQL_DB_HOST>${env.OPENSHIFT_MYSQL_DB_HOST}</OPENSHIFT_MYSQL_DB_HOST>
        <OPENSHIFT_MYSQL_DB_USERNAME>${env.OPENSHIFT_MYSQL_DB_USERNAME}</OPENSHIFT_MYSQL_DB_USERNAME>
        <OPENSHIFT_MYSQL_DB_PASSWORD>${env.OPENSHIFT_MYSQL_DB_PASSWORD}</OPENSHIFT_MYSQL_DB_PASSWORD>
        <OPENSHIFT_GEAR_NAME>${env.OPENSHIFT_GEAR_NAME}</OPENSHIFT_GEAR_NAME>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
            <version>${liquibase.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>../env</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <finalName>beads_db</finalName>
        <plugins>
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>${liquibase.version}</version>
                <configuration>
                    <propertyFile>${project.build.directory}/classes/${env}_db.properties</propertyFile>
                    <propertyFileWillOverride>true</propertyFileWillOverride>
                    <changeLogFile>liquibase/changelog-master.xml</changeLogFile>
                    <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
                    <migrationSqlOutputFile>${project.build.directory}/migrationSql.sql</migrationSqlOutputFile>
                    <logging>INFO</logging>
                    <verbose>false</verbose>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
